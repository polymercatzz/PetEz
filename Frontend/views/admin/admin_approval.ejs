<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>sidebar</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- <script src="./tailwind3.js"></script> -->
  <link
    href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"></head>

<body class="font-[kanit]">
  <%- include('../partials/admin-sidebar', { activeMenu: 'approval' }) %>
  <div class="ml-[310px] max-[1024px]:m-4 max-[1024px]:mt-20 lg:pt-4 lg:px-6">
    <div>
      <p class="text-[#000000] text-[4vh]">อนุมัติการสมัคร</p>
      <p class="text-[#6E6E6E] text-[2.3vh]">พี่เลี้ยงที่สมัครเข้ามาในระบบ</p>
    </div>
    <div id="cards" class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 items-start justify-center gap-2">
      <% if (Array.isArray(sitters) && sitters.length) { %>
        <% sitters.forEach(function(s) { %>
          <div class="border border-gray-200 rounded-xl shadow-lg p-4 w-full max-w-[380px] mt-6">
            <p class="text-[3vh] font-medium">Sitter #<%= s.sitter_id %></p>
            <hr class="my-2 text-gray-600">
            <div class="space-y-2 text-[1rem]">
              <div>
                <p class="text-[#6C6C6C]">สถานะ</p>
                <p class="capitalize"><%= s.approval_status %></p>
              </div>
              <div>
                <p class="text-[#6C6C6C]">ยืนยันตัวตน</p>
                <p><%= s.verified ? 'ผ่านการยืนยัน' : 'ยังไม่ยืนยัน' %></p>
              </div>
              <p class="text-[#6369CF] font-medium">เอกสารยืนยันตัวตน</p>
              <a href="<%= (s.id_card_doc || '').startsWith('/') ? s.id_card_doc : ('/' + (s.id_card_doc || '')) %>" target="_blank" class="flex items-center gap-2 text-[2vh] py-1 px-2 bg-[#EDEDED] rounded-xl hover:bg-[#e5e5e5]">
                <i class="bi bi-person-vcard-fill text-[3vh]"></i>
                <span>บัตรประชาชน</span>
                <span class="bg-[#334DCC] text-white p-1 rounded-md text-[1.6vh] ml-auto">ดูเอกสาร</span>
              </a>
              <div class="grid grid-cols-2 gap-3 mt-2">
                <button data-ssr-reject data-id="<%= s.sitter_id %>" class="flex items-center justify-center py-1 px-4 border border-red-300 rounded-xl bg-red-200 text-red-600 hover:shadow-lg">
                  <i class="bi bi-x text-[3vh]"></i>
                  <span>ปฏิเสธ</span>
                </button>
                <button data-ssr-approve data-id="<%= s.sitter_id %>" class="flex items-center justify-center py-1 px-4 border border-green-300 rounded-xl bg-green-200 text-green-600 hover:shadow-lg">
                  <i class="bi bi-check2 text-[3vh]"></i>
                  <span>ยืนยัน</span>
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500 mt-6">ยังไม่มีคำขออนุมัติ</p>
      <% } %>
    </div>
  </div>

  <script>
    function dropDown() {
      document.querySelector('#submenu').classList.toggle('hidden')
      document.querySelector('#arrow').classList.toggle('rotate-0')
    }
    dropDown()

    function Openbar() {
      document.querySelector('.sidebar').classList.toggle('left-[-300px]')
    }
    async function updateStatus(id, status) {
      if (!confirm(status === 'approved' ? 'ยืนยันการอนุมัติ?' : 'ยืนยันการปฏิเสธ?')) return;
      const resp = status === 'approved'
        ? await fetch(`/admin/api/sitters/${id}/status`, { method: 'PUT', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ status }) })
        : await fetch(`/admin/api/sitters/${id}`, { method: 'DELETE' });
      if (resp.ok) {
        // Reload whole page to reflect current server-rendered list
        window.location.reload();
      } else {
        const err = await resp.json().catch(() => ({ message: 'อัปเดตสถานะไม่สำเร็จ' }));
        alert(err.message || 'อัปเดตสถานะไม่สำเร็จ');
      }
    }

    // Wire SSR buttons
    document.querySelectorAll('[data-ssr-reject]').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-id');
        updateStatus(id, 'rejected');
      });
    });
    document.querySelectorAll('[data-ssr-approve]').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-id');
        updateStatus(id, 'approved');
      });
    });
  </script>
</body>

</html>